{
    "boot-source": {
      "kernel_image_path": "/path/to/vmlinux.bin",
      "boot_args": "console=ttyS0 reboot=k panic=1 pci=off init=/init"
    },
    "drives": [
      {
        "drive_id": "rootfs",
        "path_on_host": "../rootfs/scripts/java.ext4",
        "is_root_device": true,
        "is_read_only": false
      }
    ],
    "machine-config": {
      "vcpu_count": 2,
      "mem_size_mib": 512
    },
    "vsock": {
      "guest_cid": 3,
      "uds_path": "/tmp/firecracker.vsock"
    }
  }